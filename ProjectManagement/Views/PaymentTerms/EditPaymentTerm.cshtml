@using PMISBLayer.Entities
@model PaymentTerm

<form asp-controller="PaymentTerms" asp-action="UpdatePaymentTerm" method="post">
    <input name="DeliverableId" value="@Model.DeliverableId" style="display:none;" />
    <input name="Id" value="@Model.Id" style="display:none;" />
    <div class="form-group">
        <label>Enter PaymentTerm Name:</label>
        <input asp-for="Name" type="text" value="@Model.Name" class="form-control">
        <span asp-validation-for="Name" style="color: red;"></span>
    </div>
    <div class="form-group">
        <label>Enter Payment Amount:</label>
        <input asp-for="Amount" type="number" value="@Model.Amount" class="form-control">
        <span asp-validation-for="Amount" style="color: red;"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-success">Update</button>
</form>